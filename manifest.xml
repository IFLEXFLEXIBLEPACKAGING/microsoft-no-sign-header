<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0" xsi:type="MailApp">
  <!-- ID único del complemento. No cambiar -->
  <Id>e93a174d-7981-41b9-8e53-8fabb4218dc3</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>iFlex</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Omitir Firma"/>
  <Description DefaultValue="Añade una cabecera para omitir la firma automática de correo."/>
  
  <!-- URLs de producción -->
  <IconUrl DefaultValue="https://iflexflexiblepackaging.github.io/microsoft-no-sign-header/assets/icon-64.png"/>
  <HighResolutionIconUrl DefaultValue="https://iflexflexiblepackaging.github.io/microsoft-no-sign-header/assets/icon-128.png"/>
  
  <SupportUrl DefaultValue="https://github.com/iflexflexiblepackaging/microsoft-no-sign-header"/>
  <AppDomains>
    <AppDomain>https://iflexflexiblepackaging.github.io</AppDomain>
  </AppDomains>
  
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>
  
  <!-- La sección 'FormSettings' define el panel de tareas (task pane), que no estamos usando activamente para el botón. Se deja por compatibilidad de plantilla. -->
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://iflexflexiblepackaging.github.io/microsoft-no-sign-header/taskpane.html"/>
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>
  
  <Permissions>ReadWriteItem</Permissions>
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>
  <DisableEntityHighlighting>false</DisableEntityHighlighting>
  
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <!-- Apunta al archivo JS que se ejecuta en segundo plano -->
          <FunctionFile resid="Commands.Url"/>
          
          <!-- Define el botón en la ventana de redacción de correo -->
          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgComposeGroup">
                <Label resid="GroupLabel" />
                <Control xsi:type="Button" id="msgComposeOpenPaneButton">
                  <Label resid="TaskpaneButton.Label" />
                  <Supertip>
                    <Title resid="TaskpaneButton.Label" />
                    <Description resid="TaskpaneButton.Tooltip" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16" />
                    <bt:Image size="32" resid="Icon.32x32" />
                    <bt:Image size="80" resid="Icon.80x80" />
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>addCustomHeaders</FunctionName>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    
    <!-- Recursos (iconos, URLs y textos) con las rutas de producción -->
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://iflexflexiblepackaging.github.io/microsoft-no-sign-header/assets/icon-16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://iflexflexiblepackaging.github.io/microsoft-no-sign-header/assets/icon-32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://iflexflexiblepackaging.github.io/microsoft-no-sign-header/assets/icon-80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="Commands.Url" DefaultValue="https://iflexflexiblepackaging.github.io/microsoft-no-sign-header/commands.html"/>
        <bt:Url id="Taskpane.Url" DefaultValue="https://iflexflexiblepackaging.github.io/microsoft-no-sign-header/taskpane.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="Utilidades Correo"/>
        <bt:String id="TaskpaneButton.Label" DefaultValue="No firmar"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Añade una cabecera al correo para omitir la firma automática."/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>